##
# @brief Quadro common paths
##

##
# @brief installation directory for executables
##
set(BIN_INSTALL_DIR "@BIN_INSTALL_DIR@")
##
# @brief installation directory for data
##
set(DATA_INSTALL_DIR "@DATA_INSTALL_DIR@")
##
# @brief installation directory for headers
##
set(INCLUDE_INSTALL_DIR "@INCLUDE_INSTALL_DIR@")
##
# @brief installation directory for libraries
##
set(LIB_INSTALL_DIR "@LIB_INSTALL_DIR@")
##
# @brief quadro root directory
##
set(QUADRO_ROOT "${DATA_INSTALL_DIR}/quadro")
##
# @brief quadro favorites root directory
##
set(QUADRO_FAVORITES_ROOT "${QUADRO_ROOT}/favorites")
##
# @brief quadro plugins root directory
##
set(QUADRO_PLUGIN_ROOT "${QUADRO_ROOT}/plugins")
##
# @brief quadro recent root directory
##
set(QUADRO_RECENT_ROOT "${QUADRO_ROOT}/recent")
